<div class="row mt-3">
  <div class="h2 col-8">My Portfolio</div>
  <div class="col-4">
    <%= link_to refresh_stocks_path(user: current_user), class: 'fa-2x refresh-button', method: :patch do %>
      <%= fa_icon 'refresh' %>
    <% end %>
  </div>
</div>

<div class='search-area'>
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<% unless @tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>